<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="ElPaisTestSuite" parallel="tests" thread-count="2">
  
   <test name="Chrome_Win10">
    <parameter name="os" value="Windows"/>
    <parameter name="osVersion" value="10"/>
    <parameter name="browserName" value="Chrome"/>
    <parameter name="browserVersion" value="latest"/>
    <classes>
      <class name="BrowserStack.ElPaisTest.BrowserStackTest"/>
    </classes>
  </test>

  <test name="Firefox_Win10">
    <parameter name="os" value="Windows"/>
    <parameter name="osVersion" value="10"/>
    <parameter name="browserName" value="Firefox"/>
    <parameter name="browserVersion" value="latest"/>
    <classes>
      <class name="BrowserStack.ElPaisTest.BrowserStackTest"/>
    </classes>
  </test>

  <test name="Safari_macOS">
    <parameter name="os" value="OS X"/>
    <parameter name="osVersion" value="Monterey"/>
    <parameter name="browserName" value="Safari"/>
    <parameter name="browserVersion" value="latest"/>
    <classes>
      <class name="BrowserStack.ElPaisTest.BrowserStackTest"/>
    </classes>
  </test>

  <test name="iPhone_14">
    <parameter name="device" value="iPhone 14"/>
    <parameter name="realMobile" value="true"/>
    <classes>
      <class name="BrowserStack.ElPaisTest.BrowserStackTest"/>
    </classes>
  </test>

  <test name="Galaxy_S23">
    <parameter name="device" value="Samsung Galaxy S23"/>
    <parameter name="realMobile" value="true"/>
    <classes>
      <class name="BrowserStack.ElPaisTest.BrowserStackTest"/>
    </classes>
  </test>
</suite>
